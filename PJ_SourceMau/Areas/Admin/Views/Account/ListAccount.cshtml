@using PJ_SourceMau.Models
@using PJ_SourceMau.Caption
@model List<Account>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        // $('.table').DataTable();
        var table = $('#CategoryStore').DataTable();
        $('#confirm-delete').on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });
    })
</script>

<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <ol class="breadcrumb page-breadcrumb" style="  margin-right: 750px">
        <li>
            <i class="fa fa-book"></i>&nbsp;<a href="#">@CaptionKey.AdminMenu</a>
        </li>
        <li class="active">@CaptionKey.ListAccount</li>
    </ol>
    <div class="clearfix"></div>
</div>
<div class="page-content">
    <div class="panel panel-blue">
        <div class="panel-heading">@CaptionKey.ListAccount</div>
        <div class="panel-body pan">
            <br />
            <table class="table table-striped table-condensed table-hover" id="CategoryStore">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên Tài khoản</th>
                        <th>Mật Khẩu</th>
                        <th>Quyền</th>
                        <th>Nhà Thuốc</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tables-content">
                    @{ var stt = 0;}
                    @foreach (Account row in Model)
                    {
                        stt++;
                        <tr>
                            <td>
                                @stt
                            </td>
                            <td>
                                @row.username
                            </td>
                            <td>
                                @row.password
                            </td>
                            <td>
                                @row.groupId
                            </td>
                            <td>
                                <a href="/Admin/DetailDrugStore/User/@row.id" class="btn btn-info" role="button" aria-disabled="true">Truy Cập Đến Nhà thuốc</a>
                            </td>
                            <td>
                                <a href="#" data-href="/Admin/ListAccount/Delete/@row.id" data-toggle="modal" data-target="#confirm-delete" class="btn btn-danger " role="button" aria-disabled="true"><i class="fa fa-close"></i></a>
                                <a href="/Admin/ListAccount/Detail/@row.id" class="btn btn-success " role="button" aria-disabled="true"><i class="fa fa-newspaper-o" aria-hidden="true"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                ARE YOU SURE DELETE ?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>
